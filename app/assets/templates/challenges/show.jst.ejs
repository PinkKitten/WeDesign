<div class="challenge-show-page">
	<div class='row'>
		<div class='col-xs-8'>
			<div class="challenge-description">
				<h2><%= challenge.escape('name') %></h2>
				<h5><%= challenge.escape('description') %><h5>
				<h6>The challenge will close on <%= challenge.escape('end_date') %></h6>
			</div>
		</div>
		<div class='col-xs-4'><div class="submit-design">
			<img class="mannequin" src="assets/mannequin2.jpg">Submit a design
		</div></div>
	</div>
	<div class='row'>
		<div class='col-xs-12'>

			<div class="submitted-designs"></div>
		</div>
	</div>
</div>

<div class="submission-form">
	<div class="close-form-no-save">
		<a href="#" class="close-form">
			<span class="glyphicon glyphicon-remove"></span>
		</a>
	</div>
	<form role="form">
		<div class="form-group">
			<label for="design_img">Design</label><br>
			<input
			  type="filepicker"
			  data-fp-mimetype="image/*"
			  name="design[filepicker_url]"
			  data-fp-button-text="Choose Image" 
			  data-fp-button-class="btn btn-default">
		</div>
	  <div class="form-group">
	    <label for="design_title">Title</label>
	    <input type="text" 
						 class="form-control" 
						 name="design[title]" 
						 id="design_title" 
						 placeholder="Enter title" autofocus>
	  </div>
	  <div class="form-group">
	    <label for="design_description">Description</label>
	    <textarea class="form-control" 
								name="design[description]" 
								id="design_description" placeholder="A short description of your design"></textarea>
	  </div>
	  <button type="submit" class="btn btn-default">Submit</button><br>
	</form>
</div>


	

