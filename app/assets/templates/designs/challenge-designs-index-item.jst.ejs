<div class="design-thumbnail" data-id="<%= design.id %>" rel="popover">
	<div class="design-img"><img src="<%= design.get('filepicker_url') %>"></div>
	<div class="design-information">
		<%= design.escape('title') %><br>
		<i>By <%= designer.escape('name') %> </i><br>
		<b><%= designPreOrders %> preorders</b>
	</div>
</div>

<script>
var img = '<%= popup %>';
$('.design-thumbnail').popover( {content: img, html:true, trigger: 'hover', placement: 'auto left'})
</script>
