<form action="/session" method="POST">
	<input type="hidden"
				 name="authenticity_token"
				 value="<%= form_authenticity_token %>">
	<label for="user_email">Email</label>
	<div class="input-group">
		<span class="input-group-addon">@</span>
		<input type"text" name="user[email]" id="user_email" class="form-control" placeholder="Email">
	</div>
	<br>
	<label for="user_password">Password</label>
	<div class="input-group">
		<span class="input-group-addon"><img src="/assets/key_icon.png" /></span>
		<input type="password" name="user[password]" id="user_password" class="form-control" placeholder="Password">
	</div>
	<br>
	<input type="submit" value="Sign in" class="btn default-btn pink-hover">
	<input type="submit" value="Sign in as guest" class="btn default-btn pink-hover">
</form>
					