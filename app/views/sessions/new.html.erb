<div id="sign-in-form">

	<div role="tabpanel">

  <!-- Nav tabs -->
	  <ul class="nav nav-tabs" role="tablist">
	    <li role="Sign in" class="active"><a href="#sign-in" aria-controls="sign-in" role="tab" data-toggle="tab">Sign in</a></li>
	    <li role="Sign up"><a href="#sign-up" aria-controls="sign-up" role="tab" data-toggle="tab">Sign up</a></li>
		</ul>
		
	  <div class="tab-content">
	     <div role="tabpanel" class="tab-pane fade active" id="sign-in">
				 <br>
				<form action="/session" method="POST">
					<input type="hidden"
								 name="authenticity_token"
								 value="<%= form_authenticity_token %>">
					<label for="user_email">Email</label>
					<div class="input-group">
						<span class="input-group-addon">@</span>
						<input type"text" name="user[email]" id="user_email" class="form-control" placeholder="Email">
					</div>
					<br>
					<label for="user_password">Password</label>
					<div class="input-group">
						<span class="input-group-addon"></span>
						<input type="password" name="user[password]" id="user_password" class="form-control" placeholder="Password">
					</div>
					<br>
					<input type="submit" value="Sign in" class="btn default-btn">
				</form>
	     </div>
	     <div role="tabpanel" class="tab-pane fade" id="sign-up">Sign up</div>
	   </div>
	</div>
	
</div>
